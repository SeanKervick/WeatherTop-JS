<form action="/dashboard/addstation" method="POST">
        <div class="columns">
            <div class="field column">
                <label class="label">Name</label>
                <div class="control">
                    <input class="input" required placeholder="Station Name" type="string" name="title">
                </div>
            </div>
            <div class="field column">
                <label class="label">Latitude</label>
                <div class="control">
                    <input class="input" required placeholder="00.00" type="float" name="latitude">
                </div>
            </div>
            <div class="field column">
                <label class="label">Longitude</label>
                <div class="control">
                    <input class="input" required placeholder="00.00" type="float" name="longitude">
                </div>
            </div>
        </div>
        <div class="field mt-4">
            <button class="button is-info">Add Station</button>
        </div>
</form>